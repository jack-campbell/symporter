<% provide(:title, 'All users') %>
<h1>All users</h1>
<% form_tag us_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<ul class="us">
  <% @us.each do |u| %>
    <li>
      <%= link_to u.name, u %>
    </li>
  <% end %>
</ul>

