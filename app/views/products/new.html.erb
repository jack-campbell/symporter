
<% provide(:title, 'Create a new product') %>
<body>
<h1>New product upload</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Describe your product" %>
  </div>
    <p>
    <b> Attach a file </b><br/>
     <%= f.file_field :attach %>
   </p>

    <%= f.submit "Upload your product", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  </body>
