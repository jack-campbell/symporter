
<% provide(:title, 'Create a new product') %>
<body>
  <div class="container">
<h1>New product upload</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
  <div class="field">
    <%= f.text_area :description, placeholder: "Describe your product" %>
  </div>
       </div>
     <div class="row">
   
    <b> Attach a file </b><br/>
     <%= f.file_field :attach %>
  
         </div>

    <%= f.submit "Upload your product", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
    </div>
  </body>
